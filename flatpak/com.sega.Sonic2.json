{
    "app-id": "com.sega.Sonic2",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "RSDKv4",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=all"
    ],
    "modules": [
        "shared-modules/glew/glew.json",
        "shared-modules/glu/glu-9.json",
        {
            "name": "asio",
            "sources": [
                {
                    "type": "archive",
                    "archive-type": "zip",
                    "url": "https://sourceforge.net/projects/asio/files/asio/1.20.0%20%28Stable%29/asio-1.20.0.zip/download",
                    "sha256": "c6c401ab08432efb681728ad0c7407eee08143192c15dc7f38c713e83cc1d9d2"
                }
            ]
        },
        {
            "name": "sonic2",
            "no-autogen": true,
            "make-args": [
                "prefix=/app",
                "BASE_PATH=/app/share/sonic2/"
            ],
            "make-install-args": [
                "prefix=/app",
                "BASE_PATH=/app/share/sonic2/"
            ],
            "post-install": [
                "unzip -j sonic2.apk assets/Data.rsdk.xmf",
                "install -Dp -m 644 Data.rsdk.xmf /app/share/sonic2/Data.rsdk",
                "install -Dp -m 644 com.sega.Sonic2.desktop /app/share/applications/com.sega.Sonic2.desktop",
                "install -Dp -m 644 com.sega.Sonic2.svg /app/share/icons/hicolor/256x256/apps/com.sega.Sonic2.svg",
                "install -Dp -m 644 com.sega.Sonic2.appdata.xml /app/share/appdata/com.sega.Sonic2.appdata.xml"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Rubberduckycooly/Sonic-1-2-2013-Decompilation.git",
                    "branch": "main"
                },
                {
                    "type": "file",
                    "path": "sonic2.apk"
                },
                {
                    "type": "file",
                    "path": "com.sega.Sonic2.desktop"
                },
                {
                    "type": "file",
                    "path": "com.sega.Sonic2.svg"
                },
                {
                    "type": "file",
                    "path": "com.sega.Sonic2.appdata.xml"
                }
            ]
        }
    ]
}